@model Gym_Management.Models.CustomerDTO

@{
    ViewData["Title"] = "CreateCustomer";
} 
<section class="h-100 h-custom" style="background-color:currentColor;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
               <div class="card rounded-3">
                    <img src="~/Pictures/Assets/reg-1.jpg" style="width:100%" height="150px"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="text-center"> Registration</h3>
                    <div class="container">
                            @using (Html.BeginForm("CreateCustomer", "Customer", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <div class="col-sm-3 control-label mb-2">
                                        @Html.LabelFor(modal => modal.Name, "Name" , new {@class="required"})
                                    </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.TextBoxFor(modal => modal.Name ,new { @class = "form-control textFontSize",placeholder = "Name"})
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger textFontSize" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-3 control-label mb-2">
                                        @Html.LabelFor(modal => modal.Email,"E-mail", new {@class="required"})
                                    </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.TextBoxFor(modal => modal.Email,new { @class = "form-control textFontSize",placeholder = "Email"})
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger textFontSize" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3 control-label mb-2">
                                        @Html.LabelFor(modal => modal.Age,"Age", new {@class="required"})
                                    </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.TextBoxFor(modal => modal.Age,new { @class = "form-control textFontSize"})
                                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger textFontSize" })
                                    </div>
                                </div>
                                <div class="form-group">
                                        <div class="col-sm-3 control-label mb-2">
                                            @Html.LabelFor(model => model.GenderId, new { @class = "required" })
                                        </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.DropDownListFor(model => model.GenderId, new SelectList(Model.Gender, "Value", "Text"), "Select a gender", new { @class = "form-control" })
                                        @Html.HiddenFor(model => model.GenderId)
                                        @Html.ValidationMessageFor(model => model.GenderId, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3 control-label mb-1 mt-1" style=" white-space: nowrap;">
                                        @Html.LabelFor(modal => modal.PhoneNumber,"Phone Number", new {@class="required"})
                                    </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.TextBoxFor(model => model.PhoneNumber, new {@class ="form-control",placeholder ="Phone Number"})
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger textFontSize" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3 control-label mb-2" style="white-space: nowrap;">
                                      @Html.LabelFor(modal => modal.Dateofjoin,"Date of Join", new {@class="required"})
                                      
                                    </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.EditorFor(model => model.Dateofjoin, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Dateofjoin, "", new { @class = "text-danger textFontSize" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3 control-label mb-2" style="white-space: nowrap;">
                                        @Html.LabelFor(model =>model.Address,"Address", new {@class="required"})
                                    </div>
                                    <div class="col-sm-9 mb-2">
                                        @Html.TextAreaFor(model =>model.Address,new {@class ="form-control",placeholder ="Address"})
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger textFontSize" })
                                   </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MembershipId, new { @class = "required" })
                                            <div class="col-sm-9 mb-2">
                                                @Html.DropDownListFor(model => model.MembershipId, new SelectList(Model.Membership, "Value", "Text"), "Select a gender", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MembershipId, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TrainerId, new { @class = "required" })
                                            <div class="col-sm-9 mb-3">
                                                @Html.DropDownListFor(model => model.TrainerId, new SelectList(Model.Trainer, "Value", "Text"), "Select a gender", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TrainerId, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TimingsId, new { @class = "required" })
                                            <div class="col-sm-9 mb-3">
                                                @Html.DropDownListFor(model => model.TimingsId, new SelectList(Model.Timings, "Value", "Text"), "Select a gender", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.TimingsId, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                <button type="submit" class="btn btn-danger btn-block  mb-5">Register</button>
                            }   
                    </div>
                        
                </div>
            </div>
        </div>
    </div>
  </div>
</section>

