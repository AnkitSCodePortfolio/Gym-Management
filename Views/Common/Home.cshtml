<style>
    h5:hover {
        color:burlywood !important;
        transform: scale(1.3);
    }
    .card:hover{
        transform: scale(1.3);
    }
    body {
        overflow-x: hidden;
    }

    .social-icons {
        position: fixed;
        top: 50%;
        right: 0px;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }
        .social-icons a {
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 10px;
            font-size: 22px;
            font-family: 'Oswald', sans-serif;
            margin-bottom: 5px;
            border-radius: 50px 0 0 50px;
            transition: all 0.5s;
        }

            .social-icons a:hover {
                transform: translateX(-50px);
            }

            .social-icons a i {
                background-color: white;
                height: 40px;
                width: 40px;
                color: black;
                text-align: center;
                line-height: 40px;
                border-radius: 50%;
                margin-right:10px;
            }

            .social-icons a span {
                color: white;
              
                
            }

    .facebook {
        color: royalblue;
    }

    .youtube {
        color: red;
    }

    .linkedin {
        color: dodgerblue;
    }

    .instagram {
        color: mediumpurple;
    }

    .twitter {
        color: dodgerblue;
    }
    .carousel-container {
        position: relative;
        margin-top: 40px; 
    }

    .sidebar {
        position: fixed;
        top: 57%;
        left: 0;
        width: 300px;
        height: 90vh;
        transform: translateY(-50%);
        background-color: #f5f5f5;
        overflow-y: auto;
        transition: all 0.3s;
        z-index: 999;
        overflow: hidden;
    }

    .collapsed {
        width: 0;
        overflow: hidden; /* Add this line to hide the overflow */
    }

    .expanded {
        margin-left: 0;
    }

        .sidebar.collapsed {
            width: 0;
        }

    #sidebarContent {
        padding: 10px;
        transition: all 0.3s;
    }

    .collapsed #sidebarContent {
        opacity: 0;
        visibility: hidden;
        padding: 0;
    }

    .main-content {
        margin-left: 200px;
        background-color: #f5f5f5;
    }

    #collapseBtn {
        position: fixed;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        z-index: 1000;
        transition: all 0.3s;
        color: #007bff;
    }

    .collapsed #collapseBtn {
        left: -300px;
    }
    .sidebar-toggle {
        font-size: 24px;
        cursor: pointer;
        color: #007bff;
    }

    .sidebar .card:hover {
        transform: scale(1) !important;
    }

   
</style>

